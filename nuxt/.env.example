# Database Configuration (for Docker setup)
POSTGRES_USER=boring_user
POSTGRES_PASSWORD=boring_password
POSTGRES_DB=boring_db
DATABASE_URI=postgresql://boring_user:boring_password@postgres:5432/boring_db

# Payload CMS Configuration
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3010

# Bunny CDN Configuration (optional - will fall back to local storage)
# API key for Bunny CDN (used for both storage and general access)
BUNNY_API_KEY=
# Storage zone name from Bunny CDN
BUNNY_STORAGE_ZONE=
# CDN URL for serving files
BUNNY_CDN_URL=
# CDN hostname for serving files
BUNNY_CDN_HOSTNAME=

# Nuxt Configuration
# Internal Docker service URL (for server-side API calls)
NUXT_PAYLOAD_API_URL=http://payload:3000
# Public URL for browser access to Payload
NUXT_PUBLIC_PAYLOAD_URL=http://localhost:3010
# Public URL, used for OG Image when running nuxt generate
NUXT_PUBLIC_SITE_URL=
