# Payload CMS Configuration
PAYLOAD_SECRET=your-secret-key-here
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3004

# Database Configuration
DATABASE_URI=postgresql://user:password@localhost:5432/boring_meal_planner

# Alternative: Individual PostgreSQL variables (used as fallback)
# PGHOST=localhost
# PGPORT=5432
# PGUSER=user
# PGPASSWORD=password
# PGDATABASE=boring_meal_planner

# Database SSL Configuration
# DATABASE_SSL=auto  # Don't set ssl option, let pg use PGSSLMODE or connection string
# DATABASE_SSL=simple  # Uses just ssl: true
# DATABASE_SSL=true  # Enables SSL with certificate validation disabled
# DATABASE_SSL=require  # Uses ssl: true (require mode)
# DATABASE_SSL=false  # Explicitly disable SSL

# Bunny CDN Configuration (optional)
BUNNY_STORAGE_ENABLED=false
BUNNY_STORAGE_ZONE=your-storage-zone
BUNNY_API_KEY=your-bunny-api-key
BUNNY_CDN_URL=https://your-zone.b-cdn.net
BUNNY_STORAGE_COLLECTIONS=media

# Node Environment
NODE_ENV=development
